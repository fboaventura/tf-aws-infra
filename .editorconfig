root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2

[{*.json}]
tab_width = 4

[{*.hcl,*.nomad,*.tf,*.tfvars}]
tab_width = 2
ident_size = 2

[{*.markdown,*.md}]
indent_size = 4
tab_width = 4

[{Makefile}]
tab_width = 4
